#!/bin/bash -l

%includeonce <ecflow_bash.h>
%includeonce <static.h>
%includeonce <sim.h>
%includeonce <geff.h>

%includeonce <cdo.h>
%includeonce <nco.h>
%includeonce <eccodes.h>


md=${sim_ymd:4:4}
# 29 Feb missing from veg clim
if [[ $md -eq '0229' ]]; then
    md='0228'
fi
cdo -R -f nc -remapbil,n$sim_resol -seldate,2013$md $static_dir/$static_vegstage_file vs.nc

ncatted -O -a version,global,c,c,"$geff_version" vs.nc

mkdir -p $sim_dir
gzip -c vs.nc > $sim_dir/vs.nc.gz
