#!/bin/bash -l

%manual

Prepare initial conditions for ensemble forecast

%end

%includeonce <ecflow_bash.h>
%includeonce <ens.h>
%includeonce <fillup.h>

%includeonce <cdo.h>

mkdir -p $ens_dir
zcat $fillup_dir/next_run_ic.nc.gz > tmp.nc
cdo -remapnn,n$ens_resol tmp.nc ic.nc
gzip -c ic.nc > $ens_dir/ic.nc.gz
