#!/bin/bash -l

%manual

DESCRIPTION

  Send fire forecast to JRC.

ANALYSTS

  No known problems/solutions yet.


OPERATORS

  Try re-running couple of times.
  Call Integration Team analyst.

%end

%includeonce <ecflow_bash.h>
%includeonce <ens.h>
%includeonce <geff.h>
%includeonce <ecpds.h>

fctype=%FCTYPE%

for srcpath in $ens_tar_dir/ECMWF_*_$fctype.tar; do
    destfile=${srcpath##*/}
    ecpds -destination GEFF_FC -lifetime 10d -source $srcpath -target $destfile -priority 99 -force
done
