#!/bin/bash -l

%manual

Prepare cloud cover forcings fields in NetCDF format

%end

%includeonce <ecflow_bash.h>
%includeonce <sim.h>
%includeonce <geff.h>
%includeonce <const.h>
%includeonce <scripts.h>

rm -f tmp.grb
touch tmp.grb

for keys in 'type=an,step=0' 'type=fc,step=3/6/9/12/15/18/21/24'; do
mars << EOF
    retrieve,
        source = "${sim_grib_prefix}164.128",
        $sim_mars_expver,
        $sim_mars_class,
        $sim_mars_stream,
        $keys,
        time = 0,
        date = $sim_ymd,
        levtype = sfc,
        param = 164.128,
        target = "cc.grb"
EOF
cat cc.grb >> tmp.grb
done

%includeonce <cdo.h>
%includeonce <nco.h>
%includeonce <eccodes.h>
%includeonce <metview.h>

metview -b $scripts_dir/field_at_solar_time $sim_ymd 12 tmp.grb tmp2.grb

lz4get $const_dir/remapbil.nc.lz4 remapbil.nc

cdo -R -f nc -remap,n$sim_resol,remapbil.nc -settime,12:00:00 -setname,cc tmp2.grb cc.nc

ncatted -O -a version,global,c,c,"$geff_version" cc.nc

mkdir -p $sim_dir
gzip -c cc.nc > $sim_dir/cc.nc.gz
