#!/bin/bash -l

%includeonce <ecflow_bash.h>
%includeonce <suite.h>

srcdir=<?config.get('packages.scripts.srcdir')?>

blddir=$suite_dir/build/scripts
mkdir -p $blddir

rsync -aip --chmod=ug+rw,o+r --exclude '.svn/*' --exclude '.git/*' $srcdir/* $blddir

# install scripts in suite's bin/ directory
mkdir -p $suite_dir/bin

cp $blddir/field_at_solar_time $suite_dir/bin/

cp $blddir/partition $suite_dir/bin/
chmod u+x $suite_dir/bin/partition
